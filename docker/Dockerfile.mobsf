FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install --upgrade pip

RUN pip3 install mobsf

EXPOSE 8000

ENV MOBSF_HOME=/root/.MobSF

CMD ["python3", "-m", "mobsf.MobSF", "0.0.0.0:8000"]
